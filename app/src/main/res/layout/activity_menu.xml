<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo"
        android:orientation="vertical"
        android:padding="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:gravity="center"
            android:text="Gestión Payroll"
            android:textColor="#1C1C68"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="133dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button6"
                android:layout_width="163dp"
                android:layout_height="115dp"
                android:layout_gravity="center"
                android:layout_margin="15sp"
                android:layout_weight="1"
                android:background="@drawable/txt_border_redondeado"
                android:foregroundGravity="center"
                android:gravity="center"
                android:onClick="abrirRegistroEmpleado"
                android:text="Registrar Empleados "
                android:textSize="16sp"
                app:backgroundTint="#5766BD"
                app:backgroundTintMode="src_atop"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="116dp"
                android:layout_gravity="center"
                android:layout_margin="15sp"
                android:layout_marginStart="20sp"
                android:layout_marginLeft="20sp"
                android:layout_weight="1"
                android:background="@drawable/txt_border_redondeado"
                android:foregroundGravity="center"
                android:gravity="center"
                android:onClick="abrirEditarEmpleado"
                android:text="Ver empleados "
                android:textSize="16sp"
                app:backgroundTint="#5766BD"
                app:backgroundTintMode="src_atop" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="133dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button3"
                android:layout_width="158dp"
                android:layout_height="111dp"
                android:layout_margin="15sp"
                android:layout_weight="1"
                android:background="@drawable/txt_border_redondeado"
                android:onClick="abrirRolEmpleado"
                android:text="Generar Rol"
                app:backgroundTint="#5766BD"
                app:backgroundTintMode="src_over"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button4"
                android:layout_width="161dp"
                android:layout_height="108dp"
                android:layout_margin="15sp"
                android:layout_weight="1"
                android:background="@drawable/txt_border_redondeado"
                android:text="Ver Rol"
                app:backgroundTint="#5766BD"
                app:backgroundTintMode="src_in"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="72dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/txt_border_redondeado"
            android:onClick="cerrarPantallaMenu"
            android:text="Cerrar Sesión"
            android:textColor="#571717"
            android:textSize="16sp"
            app:backgroundTint="@color/material_on_primary_disabled"
            app:backgroundTintMode="multiply" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>